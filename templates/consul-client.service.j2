[Unit]
Description=Consul client process
After=network.target
 
[Service]
ExecReload=/bin/kill -HUP $MAINPID
ExecStart=/bin/bash -c '{{ hashicorp_dir_bin }}/consul agent -config-file {{ consul_cfg_dir }}/client.hcl -bind={{ local_ipv4 }}'
TimeoutStartSec=0
Type=simple
 
[Install]
WantedBy=default.target
